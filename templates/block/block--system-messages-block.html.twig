{#
/**
 * @file
 * Theme override for the messages block.
 *
 * Removes wrapper elements from block so that empty block does not appear when
 * there are no messages.
 *
 * Available variables:
 * - content: The content of this block.
 */
#}

<link rel="import" href="/themes/custom/cruftless/bower_components/paper-toast/paper-toast.html">

{% if content %}
  <paper-toast text="" opened duration="2500">
    {{ content }}
  </paper-toast>
{% endif %}
